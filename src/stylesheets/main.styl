@import url('https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic&subset=latin,cyrillic')

@import 'lib/normalize.css'

@import 'material/material-design-lite'


$color_red = #ea4452

.logo
  margin 0
  
  &-letter
    display block
    text-align center
    width 64px
    background #333
    color #fff
    font-size 3rem
    font-weight 600

.header
  box-shadow none
  

.drawer
  border-width 0
  box-shadow none
  overflow-y visible
  
.navigation
  flex-grow 1
  
  &__link
    opacity .95
    
    &--with-dropmenu
      display flex !important
      -webkit-box-orient horizontal
      -webkit-box-direction normal
      flex-direction row
      -webkit-box-align center
      -webkit-align-items center
      -ms-flex-align center
      align-items center
      z-index 2
      position relative
    
    &:hover
    &:focus
      background-color #333 !important
      color #fff !important 

  &-paragraph
    display block
    flex-shrink 0
    // padding 0 $layout-header-desktop-indent
    margin 0
    
    &:last-child
      padding-bottom 16px !important

    @media screen and (max-width: $layout-screen-size-threshold)
      // padding 0 $layout-header-mobile-indent
      

.grid
  margin-top 64px
    
.item
  position relative
  height 330px
  display flex
  flex-direction column
  justify-content center
  overflow hidden
  
  background-size cover
  background-position 50%
  background-repeat no-repeat
  
  &-grid
    padding 0
    margin 0
        
    &.mdl-cell--6-col
      width 50%
  
  &--height-double
    height 676px
  
  &--desc
    p 
      line-height normal
    // background #eee
    // padding 1rem
    
    // p
    //   font-size 3.3rem
    //   line-height normal
    
  video,
  img  
    position absolute
    top 50%
    left 50%
    min-width 100%
    min-height 100%
    width auto
    height auto
    z-index -100
    transform translateX(-50%) translateY(-50%)
    background-size cover
    
  &-text 
    position absolute
    background rgba(255, 255, 255, .95)
    width 100%
    height 100%
    top 100%
    padding 1rem 3rem 2rem
    box-sizing border-box
        
    &--headline
      border-bottom .2rem solid #ea4452  
    
    

.text
  &--red
    // color #ea4452    
    border-bottom .3rem solid #ea4452    
    
  &--center
    text-align center  
    


.section
  margin-top 5rem
  
  &-title
    // max-width 800px
    margin 0 auto   
    padding 0 16px
    
    &__h2 span
      border-bottom .3rem solid $color_red



 


 .button
   &--color-red
     background-color $color_red !important